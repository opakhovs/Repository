@model Repository.Viewmodels.ProjectViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h2>Details about project</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProjectOwner)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProjectOwner)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastRelease)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastRelease)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dd>
            @Html.LabelFor(x => Model.Artifacts, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.DropDownListFor(x => x.SelectedIds, Model.Artifacts.Select(x => new SelectListItem { Text = x.Properties.Select(s => s.Name).First(), Value = x.Properties.Select(s => s.Id.ToString()).First() }),
                                                htmlAttributes: new { @class = "form-control", id = "Artifacts", @multiple = true })
                @Html.ValidationMessageFor(x => x.SelectedIds, "", new { @class = "text-danger" })
            </div>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
